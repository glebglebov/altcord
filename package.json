{
  "name": "mini-discord",
  "version": "1.0.2",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"tsc electron/main.ts --watch --outDir dist\" \"electron .\"",
    "build:react": "vite build",
    "build:electron": "tsc electron/main.ts --outDir dist",
    "build": "npm run build:react && npm run build:electron",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.minidiscord",
    "productName": "MiniDiscord",
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  },
  "dependencies": {
    "@emoji-mart/data": "^1.2.1",
    "@emoji-mart/react": "^1.1.1",
    "@microsoft/signalr": "^7.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.0.1",
    "electron": "^29.0.0",
    "electron-builder": "^24.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0",
    "vite": "^4.5.0"
  }
}
